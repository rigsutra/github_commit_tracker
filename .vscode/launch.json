{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/extension.js",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "npm: watch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "integratedTerminal"
    }
  ]
}
